<div id="content-wrapper">

<!-- DataTables Example -->
<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    客户管理</div>
  <div class="card-body">
          <civ class="row">
            <span>客户名：<input type="search" class="form-control form-control-sm"  aria-controls="client"  placeholder="客户名"></span>
            <button type="button" class="elements-on-right btn-primary ">
            搜索
           </button>
           &nbsp;&nbsp;<%= link_to '添加客户', new_customer_customers_path, class:"elements-on-right btn-primary" %>
          </div>
    <div class="table-responsive">
      <table class="table table-bordered" id="client" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>编号</th>
            <th>单位名称</th>
            <th>项目名称</th>
            <th>联系人</th>
            <th>客户电话</th>
            <th>客户职位</th>
            <th>邮箱地址</th>
            <th>支持地址</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
        <% @customerContacts.each do |customerContact| %>
          <tr>
            <td><%= customerContact.id %></td>
            <td><%= customerContact.unit_name %></td>
            <td><%= customerContact.project_name %></td>
            <td><%= customerContact.name %></td>
            <td><%= customerContact.telephone %></td>
            <td><%= customerContact.position %></td>
            <td><%= customerContact.email %></td>
            <td><%= customerContact.address %></td>
            <td><%= link_to '添加', edit_customer_customers_url%>
                &nbsp;<%= link_to '编辑', edit_customer_customers_path(customerContact)%>
                &nbsp;<%= link_to "删除", edit_customer_customers_path(customerContact) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!--分页-->
    <div class="row elements-on-right">
    <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="#">上一页</a></li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item"><a class="page-link" href="#">下一页</a></li>
    </ul>
  </nav>
  </div>

</div>