%section.content-header
  %h1
    = @page_title
%section.content
  .box
    = form_with url: projects_path, method: :get do |f|
      .box-header
        .row
          .col-md-6
            %h3.box-title 筛选查询
          .col-md-6
            .pull-right-container
            = f.submit "查询", class: "btn btn-success pull-right col-md-3 margin-l-5 margin-r-5", id: "action_query"    
      .box-body
        .row
          .col-md-4
            .form-group
              %label 项目名称:
              = f.text_field :name, class: "form-control"
          .col-md-4
            .form-group
              %label 项目状态:
              = f.select :status, options_for_select(Project.status_options.to_h), {include_blank: "全部"} , class: "form-control select2 select2-hidden-accessible", style: "width: 100%;", "data-select2-id": "1", tabindex:"-1", "aria-hidden": "true"
          .col-md-4
            .form-group
              %label 时间:
              = text_field(:user, :graduation_day, class: "form-control date-range-picker")
  .box#project_list
    = render 'list'
             


