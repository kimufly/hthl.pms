.container-fluid
  .card.mb-3
    .card-header
      %i.fas.fa-chart-area
      %h3
        添加用户
        %h3
    .card-body.col-md-6
      = form_for :user, url: users_path do |f|
        .form-group
          = f.label :真实名字
          %br/
          = f.text_field :name,                         |
            class:"form-control", placeholder:"请输入真实名字" |
        .form-group
          = f.label :邮箱
          %br/
          = f.text_field :email,                      |
            class:"form-control", placeholder:"请输入邮箱" |
        .form-group
          = f.label :请选择角色类型
          %br/
          = f.select(:role_id, [['admin',1], ['test', 2]], {}, class:"form-control")
        .form-group
          = f.label :请选择性别
          %br/
          = f.select(:sex, [['未知',                                                     |
            'unknown'], ['男', 'male'], ['女', 'femininity']], {}, class:"form-control") |
        .form-group
          = f.label :电话
          %br/
          = f.text_field :phone_number,               |
            class:"form-control", placeholder:"请输入电话" |
        .form-group
          = f.label :登录密码
          %br/
          = f.text_field :password,                     |
            class:"form-control", placeholder:"请输入登录密码" |
        .form-group
          = f.label :备注信息
          %br/
          = f.text_area :explain, size:   |
            "24x6", class: "form-control" |
        %p= f.submit "保存", class:"btn btn-w-m btn-info"
